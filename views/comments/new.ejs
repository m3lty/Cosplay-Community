<% include ../partials/header %>
<div class="container">
  <div class="row addCon">
    <h1>Add new comment about <%= convention.name %> </h1>
    <form action="/cons/<%= convention._id %>/comments/" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/">Back to Convention List</a>
  </div>
</div>

